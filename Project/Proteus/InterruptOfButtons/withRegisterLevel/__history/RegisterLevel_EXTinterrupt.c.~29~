#include <16f887.h>

#use delay(clock=4M)

#use fast_io(b) // B portlarý 3 display için de ortak kullanýlacak


#fuses HS,NOWDT,NOPUT,NOLVP,NOCPD,NOPROTECT,NODEBUG,NOBROWNOUT,NOWRT

#byte my_INTCON_REG      = 0x0B
#byte my_TIM0_OPTION_REG = 0x81 

#define pin_led pin_B1



typedef struct{


}

typedef struct{

    unsigned mRBIF : 1;   // bit 0
    unsigned mINTF : 1;   // bit 1
    unsigned mT0IF : 1;   // bit 2
    unsigned mRBIE : 1;   // bit 3
    unsigned mINTE : 1;   // bit 4
    unsigned mT0IE : 1;   // bit 5
    unsigned mPEIE : 1;   // bit 6
    unsigned mGIE  : 1;   // bit 7
    
}INTCONreg_bit;

volatile INTCONreg_bit INTCONbits;  // Deðiþken tanýmlama




#int_EXT
void system_OK_Button_isr(){
   
   output_toggle(pin_led);
   delay_ms(500);
   
   
}


void main(void) 
{

   INTCONreg_bit INTCONreg;
   //b0_pin giriþ olarak ayarlandý
   set_tris_b(0x01);     
   
   //Register Level external interrupt config
   
   //Buralar register yazýlacak
   
   INTCONreg.
   
   ext_int_edge(L_TO_H); //Harici kesme Lojik 0'dan 1'e geçerken
   enable_interrupts(INT_EXT); //Harici kesme aktif
   enable_interrupts(GLOBAL); //Aktif kesmeler için genel kesme yetkisi ver 
   
 while(1) //Sonsuz döngü baþlangýcý
 {
 

        
  
 }
} 
