#include <16f887.h>

#use delay(clock=4M)
#use fast_io(b) 

#fuses HS,NOWDT,NOPUT,NOLVP,NOCPD,NOPROTECT,NODEBUG,NOBROWNOUT,NOWRT

#define ledPin pin_B0


//-->REGISTER DEFINATIONS
#byte my_OPTION_REG = 0x81 
#byte my_TIM0_MODULE_REG = 0x01 

#INT_TIMER0

void main(void) 
{

   // T(overflow) = InstructionTime*PSC*(256-TIM0_val)
   // 2000us(2ms) = 1us * 8 * (256-TIM0_val)
   // 250 = 256-TIM0_val 
   // TIM0_val = 6 olacak, yani timerý baþlatmamýz gereken deðer 6!
     my_OPTION_REG &= 0xD2;
     my_TIM0_MODULE_REG = 6;

 set_tris_b(0x00);               


 while(1) //Sonsuz döngü baþlangýcý
 {
 
output_high(ledPin);
delay_ms(1000);
output_low(ledPin);
delay_ms(1000);
         //TimingNumber zamanlayýcýdan alýnacak

  
 }
} 
